{
    "title": "LZ personal",
    "rules": [
        {
            "description": "R assign",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                      "key_code": "command",
                      "modifiers": {
                        "optional": [
                          "shift"
                        ]
                      }
                    },
                    "to": [
                        {
                          "key_code": "comma",
                          "modifiers": [
                            "left_shift"
                          ]
                        },
                        {
                          "key_code": "hyphen"
                        },
                        {
                          "key_code": "spacebar"
                        }
                    ],
                    "conditions": [
                      {
                        "type": "variable_if",
                        "name": "r_assign",
                        "value": 1
                      },
                      {
                        "type": "frontmost_application_unless",
                        "bundle_identifiers": [
                          "^org\\.rstudio\\.RStudio$"
                        ]
                      }
                    ]
                  },
                  {
                    "type": "basic",
                    "from": {
                      "simultaneous": [
                        {
                          "key_code": "left_command"
                        },
                        {
                          "key_code": "left_shift"
                        },
                        {
                          "key_code": "comma"
                        }
                      ],
                      "simultaneous_options": {
                        "key_down_order": "strict",
                        "key_up_order": "strict_inverse",
                        "detect_key_down_uninterruptedly": true,
                        "to_after_key_up": [
                          {
                            "set_variable": {
                              "name": "r_assign",
                              "value": 0
                            }
                          }
                        ]
                      },
                      "modifiers": {
                        "optional": [
                          "any"
                        ]
                      }
                    },
                    "to": [
                      {
                        "set_variable": {
                          "name": "r_assign",
                          "value": 1
                        }
                      },
                      {
                        "key_code": "comma",
                        "modifiers": [
                          "left_shift"
                        ]
                      },
                      {
                        "key_code": "hyphen"
                      },
                      {
                        "key_code": "spacebar"
                      }
                    ],
                    "conditions": [
                      {
                        "type": "frontmost_application_unless",
                        "bundle_identifiers": [
                          "^org\\.rstudio\\.RStudio$"
                        ]
                      }
                    ]
                  }
            ]
        },
